<div class="container mt-5">
  <h1>All Restaurants</h1>
</div>

<p><%= link_to "Create New", new_restaurant_path, class: "btn btn-primary"%></p>

<div class="container">
  <% @restaurants.each do |res| %>
    <div class="card-product">
      <div class="card-product-infos">
        <p><%= res.name %></p>
        <p><%= res.address %></p>
        <p><%= res.category %></p>
        <p><%= res.phone_number %></p>
        <p><%= link_to "See details", restaurant_path(res), class: "btn btn-primary"%></p>
      </div>
    </div>
  <% end %>
</div>
