<div class="container mt-5">
  <h1>Create New Restaurant</h1>
</div>

<div class="container">
 <%= simple_form_for @restaurant do |f| %>
  <%= f.input :name %>
  <%= f.input :address %>
  <%= f.input :category, collection: Restaurant::CATEGORY, include_blank: false %>
  <%= f.submit class: 'btn btn-primary mt-2' %>
  <% end %>
</div>
