<div class="container mt-5">
  <h1>How was <%= @restaurant.name %>?</h1>
</div>

<div class="container">
  <%= simple_form_for [@restaurant, @review] do |f| %>
    <%= f.input :content %>
    <%= f.input :rating, collection: (0..5), include_blank: false %>
    <%= f.submit class: 'btn btn-primary mt-2' %>
  <% end %>
  <%= link_to 'Back', restaurants_path, class: 'btn btn-primary mt-2' %>
</div>
